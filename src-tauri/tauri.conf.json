{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "track_tor",
    "version": "v0.0.2"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "fs": {
        "all": true,
        "scope": ["**"]
      },
      "shell": {
        "all": true,
        "open": true
      },
      "dialog": {
        "all": true
      },
      "protocol": {
        "all": true,
        "asset": true,
        "assetScope": ["**"]
      }
    },
    "bundle": {
      "active": true,
      "windows": {
        "webviewInstallMode": {
          "type": "embedBootstrapper"
        }
      },
      "targets": "all",
      "identifier": "com.tracktor.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost" 
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "track_tor",
        "width": 1240,
        "height": 720
      }
    ],
    "updater": {
      "windows":{
        "installMode": "passive"
      },
      "endpoints": [
        "https://gist.githubusercontent.com/jmjaimesmendoza/939bafa0bf4b74d566e639f15f880704/raw/"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDg2OEIzMjFFMUEyNkE2RjYKUldUMnBpWWFIaktMaGxJODNSdlp1akdPZDBCcXJTL2habjkzb1Q5T2taNGNaREkyU2J2cmFXYm4K"
    }
  }
}
